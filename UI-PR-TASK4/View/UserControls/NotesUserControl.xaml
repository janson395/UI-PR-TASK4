<UserControl x:Class="UI_PR_TASK4.View.UserControls.NotesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI_PR_TASK4.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <materialDesign:TransitioningContent 
            x:Name="TransitionContentSlide"
            OpeningEffect="{materialDesign:TransitionEffect SlideInFromLeft, Duration = 0:0:0:1}">
            <Image Source="/View/UserControls/bg_notes.jpeg" Stretch="UniformToFill"/>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
